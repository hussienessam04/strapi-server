{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "category": {
      "type": "string"
    },
    "colors": {
      "type": "json"
    },
    "sizes": {
      "type": "json"
    },
    "onSale": {
      "type": "boolean",
      "default": false
    },
    "trends": {
      "type": "boolean",
      "default": false
    }
  }
}
